<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-5'>
      <table class='table table-hover table-inverse table-striped'>
        <br/>
        <div class="p-3 mb-2 bg-secondary text-white">
          <h3>ジャンル一覧・追加</h3>
        </div>
        <br/>
        <tr>
        <%= form_for @genre, url:admin_genres_path, local:true do |f| %>
            <%= f.label :ジャンル名, class: 'mr-4' %>
            <%= f.text_field :name, class: 'mr-5' %>
            <%= f.submit "新規登録", class: 'btn btn-success' %>
        <% end %>
        </tr>
        <br/>
        <br/>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="7"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>