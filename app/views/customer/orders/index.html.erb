<div class="row mt-5" style="width: 100%; margin-bottom:300px">
 <div style="width: 800px; margin:0 auto;">
   <h4 class="mypage">
     注文履歴一覧
   </h4>
   <table class="table table-bordered mt-5 w-75">
      <thead>
        <tr class="t">
          <th>
            注文日
          </th>
          <th>
            配送先
          </th>
          <th>
            注文商品
          </th>
          <th>
            支払い金額
          </th>
          <th>
            ステータス
          </th>
          <th>
            注文詳細
          </th>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |order| %>
        <tr>
          <th>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </th>
        </tr>
        <tr>
          <th>
            <%= order.postal_code %>
            <%= order.address %>
            <%= order.name %>
          </th>
        </tr>
        <tr>
          <th>
            <% order.order_details.each do |order_detail|%>
            <%= order_detail.item.name %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>
            <%= order.total_payment %>
          </th>
        </tr>
        <tr>
          <th>
            <%= order.status_i18n %>
          </th>
        </tr>
        <tr>
        <% end %>
          <th>
            <%= link_to "表示する", order_path, class: "btn btn-success text-center btn-lg" %>
          </th>
        </tr>
      </tbody>
   </table>