<div class="row mt-5" style="width: 100%; margin-bottom:300px">
 <div style="width: 800px; margin:0 auto;">
   <h4 class="mypage">
     配送先登録/一覧
   </h4>
    <%= form_for @addresses_new, url: addresses_path, method: 'POST' do |f| %>
      <div class="filed">
       <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-3" %>
       <%= f.text_field :postal_code, autofocus: true,  placeholder: "000000", class: "col-sm-2" %><br>
       <%= f.label "住所", class: "col-sm-3 col-form-label" %>
       <%= f.text_field :address, placeholder: "山田", class: "col-sm-8" %><br>
       <%= f.label "宛名", class: "col-sm-3 col-form-label" %>
       <%= f.text_field :name, placeholder: "山田", class: "col-sm-5"%><br>
       <%= f.submit "新規登録", class: "btn btn-success d-inline-block col-sm-2 mt-8 mr-5" %>
  <% end %>
  <table class="table table-bordered mt-5 w-75">
      <therd>
        <tr class="t">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </therd>
      <% @addresses.each do |address| %>
      <tr>
      <th>
        <%= address.postal_code %>
      </th>
      <th>
        <%= address.address %>
      </th>
      <th>
        <%= address.name %>
      </th>
      <th>
        <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-outline-success" %>
        <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-outline-danger" %>
      </th>
      <% end %>
      </table>
       