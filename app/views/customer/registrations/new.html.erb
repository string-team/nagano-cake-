<div class="haikei">
<div class="container row mt-5 ml-5 ">
  <div class="row">
    <div class="col-md-12">
     <h4 class="new">
       新規会員登録
     </h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<table id="customers-table" class="table mt-10">
       <tr>
        <td style="border:none;">
         <%= f.label "名前", class: "col-sm-310 col-form-label" %>
        </td>
        <td style="border:none;">
         <%= f.text_field :first_name, autofocus: true, placeholder: "(姓)", class: "col-sm-4 col-form-control"%>
         <%= f.text_field :last_name, autofocus: true, placeholder: "(名)", class: "col-sm-4 col-form-control" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label "フリガナ", class: "col-sm-310 col-form-label"%>
        </td>
        <td style="border:none;">
         <%= f.text_field :first_name_kana, autofocus: true, placeholder:"(セイ)", class: "col-sm-4 col-form-control" %>
         <%= f.text_field :last_name_kana, autofocus: true, placeholder:"(メイ)", class: "col-sm-4 col-form-control" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label "メールアドレス", class: "col-sm-310 col-form-label" %>
        </td>
        <td style="border:none;">
         <%= f.text_field :email, autofocus: true, placeholder: "sample@sample.com" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-310 col-form-label" %>
        </td>
        <td style="border:none;">
         <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label "住所", class: "col-sm-310 col-form-label " %>
        </td>
        <td style="border:none;">
         <%= f.text_field :address, autofocus: true, placeholder: "東京都豊島区東池袋１丁目４３−５", class: "col-sm-8 mt-1" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label "電話番号(ハイフンなし)", class: "col-sm-310 col-form-label" %>
        </td>
        <td style="border:none;">
         <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label "パスワード(6文字以上)", class: "col-sm-310 col-form-label" %>
        </td>
        <td style="border:none;">
         <%= f.password_field :password, placeholder: "new-password" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label "パスワード(6文字以上)", class: "col-sm-310 col-form-label" %>
        </td>
        <td style="border:none;">
         <%= f.password_field :password_confirmation, placeholder: "new-password" %>
        </td>
       </tr>
       <tr>
        <td style="border:none;">
         <%= f.label " ", class: "col-sm-310 col-form-label" %>
        </td>
        <td style="border:none;">
         <%= f.submit "新規登録", class: "push mt-3 mr-5 col-sm-5" %>
        </td>
       </tr>
      <% end %>
  <tr>
       <td style="border:none;">
        <h4 class="new">既に登録済みの方</h4>
        <%= render "customer/shared/links" %>
       </td>
      </tr>
     </table>
　　</div>
  </div>
  </div>
  </div>