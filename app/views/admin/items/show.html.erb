<div class = "container">
  <div class = "row">
    <h3 class = "text-left"><span>商品詳細</span></h3>
  </div>
  <div class = "row">
    <div class = "col-lg-12">
      <div class = "col-lg-1"></div>
      <div class = "col-lg-3">
        <dic id = "image_field">
          <%= attachment_image_tag(@item, :image,size: "384x216", fallback: "no_image.jpg") %>
        </dic>
      </div>
      <div class = "col-lg-7">
        <table class = "table">
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction</th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre %></th>
          </tr>
          <tr>
            <th>税込価格</th>
            <br>
            <th>(税抜価格)</th>
            <th><%= @item_tax_price %>  (<%= @item.price %>)円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.is_active == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
            </th>
          </tr>
          <tr>
            <div class = "text-center">
              <button type="button" class="btn btn-success">編集する</button>
            </div>
          </tr>
        </table>
      </div>
      <div class = "col-lg-1"></div>
    </div>
  </div>
</div>