<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th><h2>ショッピングカート</h2></th>
            <th colspan="3"></th>
            <th><%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, class: "btn btn-sm btn-danger"%></th>
          </tr>
        </thead>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag(cart_item.item, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.price*1.1 %></td>
              <td>
                [数量変更のプルダウンメニュー]
                <%= link_to '変更', cart_item_path(cart_item), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%= cart_item.item.price*1.1*cart_item.amount %>
              </td>
              <td><%= link_to '削除する', cart_item_path, method: :delete, class: "btn btn-sm btn-danger"%></td>
            </tr>
          <% end %>
          </br>
          <tr>
            <td><%= link_to '買い物を続ける', root_path, class: "btn btn-sm btn-primary" %></td>
            <td>合計金額　xxxxx</td>
          </tr>
        </tbody>
      </table>
      </br>
      <p><%= link_to '情報入力', new_order_path, class: "btn btn-success" %></p>
    </div>
  </div>
</div>