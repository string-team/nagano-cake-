<div class="container">
  <div class="row">
    <div class="col-md-12">
     <h4 class="new">
       新規会員登録
     </h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="filed">
       <%= f.label "名前", class: "col-sm-3 col-form-label" %>
       <span class="span_name">(姓)</span>
       <%= f.text_field :first_name, autofocus: true, placeholder: "山田", class: "col-sm-2 col-form-control"%>
       <span class="span_name1">(名)</span>
       <%= f.text_field :last_name, autofocus: true, placeholder: "花子", class: "col-sm-2 col-form-control" %>
      </div>
      <div class="field">
       <%= f.label "フリガナ", class: "col-sm-3 col-form-label"%>
       <span class="span_name">(セイ)</span>
       <%= f.text_field :first_name_kana, autofocus: true, placeholder:"ヤマダ", class: "col-sm-2 col-form-control" %>
       <span class="span_name1">(メイ)</span>
       <%= f.text_field :last_name_kana, autofocus: true, placeholder:"ハナコ", class: "col-sm-2 col-form-control" %>
      </div>
      <div class="field">
       <%= f.label "メールアドレス", class: "col-sm-3 col-form-label" %>
       <%= f.text_field :email, autofocus: true, placeholder: "sample@sample.com" %>
      </div>
      <div class="field">
       <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label" %>
       <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
      </div>
      <div class="field">
       <%= f.label "住所", class: "col-sm-3 col-form-label" %>
       <%= f.text_field :address, autofocus: true, placeholder: "東京都豊島区東池袋１丁目４３−５" %>
      </div>
      <div class="field">
       <%= f.label "電話番号(ハイフンなし)", class: "col-sm-3 col-form-label" %>
       <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %>
      </div>
      <div>
       <%= f.label "パスワード(6文字以上)", class: "col-sm-3 col-form-label" %>
       <%= f.password_field :password, placeholder: "new-password" %>
      </div>

      <div class="field">
       <%= f.label "パスワード(6文字以上)", class: "col-sm-3 col-form-label" %>
       <%= f.password_field :password_confirmation, placeholder: "new-password" %>
      </div>

      <div class="actions">
       <%= f.label " ", class: "col-sm-2 col-form-label" %>
       <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
      <% end %>
　　　<h4　class="new">既に登録済みの方</h4><br>
      <%= render "customer/shared/links" %>
　　</div>
  </div>
  </div>
