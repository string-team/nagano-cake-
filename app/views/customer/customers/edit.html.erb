<div class="row mt-5" style="width: 100%; margin-bottom:300px">
   <div style="width: 800px; margin:0 auto;">
     <h2 class="edit">会員情報編集</h2>
      <div class="filed">
       <%= form_for @customer, url: customers_path, method: 'PATCH' do |f| %>
       <%= f.label "氏名", class: "col-sm-3 col-form-label mt-1" %>
       <%= f.text_field :first_name, autofocus: true, placeholder: "山田", class: "col-sm-3 col-form-control mt-1"%>
       <%= f.text_field :last_name, autofocus: true, placeholder: "花子", class: "col-sm-3 col-form-control mt-1" %>
      </div>
      <div class="field">
       <%= f.label "フリガナ", class: "col-sm-3 col-form-label mt-1"%>
       <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ヤマダ", class: "col-sm-3 col-form-control mt-1" %>
       <span class="span_name1"> </span>
       <%= f.text_field :last_name_kana, autofocus: true, placeholder: "ハナコ", class: "col-sm-3 col-form-control mt-1" %>
      </div>
      <div class="field">
       <%= f.label "メールアドレス", class: "col-sm-3 col-form-label mt-1" %>
       <%= f.text_field :email, autofocus: true, placeholder: "sample@sample.com", class: "col-sm-3 mt-1" %>
      </div>
      <div class="field">
       <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label mt-1" %>
       <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "col-sm-3 mt-1" %>
      </div>
      <div class="field">
       <%= f.label "住所", class: "col-sm-3 col-form-label mt-1" %>
       <%= f.text_field :address, autofocus: true, placeholder: "東京都豊島区東池袋１丁目４３−５", class: "col-sm-8 mt-1" %>
      </div>
      <div class="field">
       <%= f.label "電話番号(ハイフンなし)", class: "col-sm-3 col-form-label mt-1" %>
       <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", class: "col-sm-3 mt-1" %>
      </div>
      <%= f.submit '編集内容を保存', class: "btn  col-sm-3 areare ari d-inline-block mt-3 mr-5" %>
      <%= link_to '退会する', customers_unsubscribe_path, class: "btn  col-sm-3 taikai areare d-inline-block mt-3 ml-5" %>
      <% end %>
</div>
</div>
<%= link_to "編集用仮消す予定", customers_my_page_path %>
