<div class="row mt-5 haikei" style="width: 100%;">
   <div style="width: 800px; margin:0 auto;">
<h4 class="edit">
      会員情報編集
     </h4>
       <%= form_for @customer, url: customers_path, method: 'PATCH' do |f| %>
       <table id="customers-table" class="table mt-3">
        <tr>
         <td style="border:none;">
          <%= f.label "氏名", class: "col-sm-310 col-form-label mt-10" %>
         </td>
         <td style="border:none;">
          <%= f.text_field :last_name, autofocus: true, placeholder: "花子", class: "col-sm-3 col-form-control mt-1" %>
          <%= f.text_field :first_name, autofocus: true, placeholder: "山田", class: "col-sm-3 col-form-control mt-1"%>
         </td>
        </tr>
        <tr>
         <td style="border:none;">
          <%= f.label "フリガナ", class: "col-sm-310 col-form-label mt-10"%>
         </td>
         <td style="border:none;">
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "ハナコ", class: "col-sm-3 col-form-control mt-1" %>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ヤマダ", class: "col-sm-3 col-form-control mt-1" %>
         </td>
        </tr>
        <tr>
         <td style="border:none;">
          <%= f.label "メールアドレス", class: "col-sm-310 col-form-label mt-10" %>
         </td>
         <td style="border:none;">
          <%= f.text_field :email, autofocus: true, placeholder: "sample@sample.com", class: "col-sm-8 mt-1" %>
         </td>
        </tr>
        <tr>
         <td style="border:none;">
          <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-310 col-form-label mt-10" %>
         </td>
         <td style="border:none;">
          <%= f.text_field :postal_code, placeholder: "0000000", class: "col-sm-3 mt-1" %>
         </td>
        </tr>
        <tr>
         <td style="border:none;">
          <%= f.label "住所", class: "col-sm-310 col-form-label mt-1" %>
         </td>
         <td style="border:none;">
          <%= f.text_field :address, placeholder: "東京都豊島区東池袋１丁目４３−５", class: "col-sm-8 mt-1" %>
         </td>
        </tr>
        <tr>
         <td style="border:none;">
          <%= f.label "電話番号(ハイフンなし)", class: "col-sm-310 col-form-label mt-1" %>
         </td>
         <td style="border:none;">
          <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", class: "col-sm-3 mt-1" %>
         </td>
        </tr>
        <tr>
         <td style="border:none;">
          <%= f.submit '編集内容を保存', class: "btn  col-sm-10 areare ari d-inline-block mt-3 mr-5" %>
         </td>
         <td style="border:none;">
          <%= link_to '退会する', customers_unsubscribe_path, class: "btn  col-sm-5 taikai areare d-inline-block mt-3 ml-5" %>
         </td>
        </tr>
      <% end %>
     </table>
</div>
</div> 
