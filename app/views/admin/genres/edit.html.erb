<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-5'>
      <table class='table table-hover table-inverse'>
        <br/>
        <tr><h3 class="p-3 mb-2 bg-secondary text-white">ジャンル編集</h3></tr>
        <br/>
        <tr>
        <%= form_for @genre, url:admin_genre_path, method: :patch, local:true do |f| %>
            <%= f.label :ジャンル名, class: 'mr-4' %>
            <%= f.text_field :name, class: 'mr-5' %>
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>