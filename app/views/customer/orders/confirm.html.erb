<div class="container">
<h2>注文情報確認</h2>
<%= form_with (model: @order,local: true) do |f| %>
<!--テーブル税込、数量、小計-->
<div class = "row">
  <div class = "col">
    <table border = "1" align = "left" >
        <thead>
            <tr align = "center">
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', fallback: "no_image.jpg",size:"50x50" %>
                <%= cart_item.item.name %>
              </td>
              <td>
                  <%= cart_item.item.price*1.1 %>
              </td>
              <td>
                  <%= cart_item.amount %>
              </td>
              <td>
                  <%= cart_item.item.price*1.1*cart_item.amount %>
              </td>
            </tr>
            <% end %>
        </tbody>
    </table>
  </div>
  <div class = "col">
    <table border = "1" align = "left" >
      <tr>
        <th>送料</th>
        <td>800</td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td></td>
      </tr>
    </table>
  </div>
</div>

<h2>支払方法</h2>
<%= @order.payment_method %>

<h2>お届け先</h2>
<%= @order.postal_code %>
<%= @order.address %>
<%= @order.name %>

<div class="text-center confirm">
  <%= f.submit "購入を確定する", class: "btn btn-success text-center btn-lg" %>
</div>
<% end %>
</div>