<div class="container">
<h2>注文情報確認</h2>
<%= form_for @order,local: true do |f| %>
<!--テーブル税込、数量、小計-->
<div class = "row">
  <div class = "col">
    <table border = "1" align = "left" >
        <thead>
            <tr align = "center">
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', fallback: "no_image.jpg",size:"50x50" %>
                <%= cart_item.item.name %>
              </td>
              <td>
                  <%= cart_item.item.price*1.1 %>
              </td>
              <td>
                  <%= cart_item.amount %>
              </td>
              <td>
                  <%= cart_item.item.price*1.1*cart_item.amount %>
              </td>
            </tr>
            <% @total += cart_item.item.price*1.1*cart_item.amount %>
            <% end %>
        </tbody>
    </table>
  </div>
  <div class = "col">
    <table border = "1" align = "left" >
      <tr>
        <th>送料</th>
        <td>800</td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= @total %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= @total + 800 %></td>
      </tr>
    </table>
  </div>
</div>

<h2>支払方法</h2>
<%= @order.payment_method_i18n %>

<h2>お届け先</h2>
〒<%= @order.postal_code %>
<%= @order.address %>
<%= @order.name %>

<%= f.hidden_field :payment_method ,:value => @order.payment_method %>
<%= f.hidden_field :shipping_cost ,:value => 800 %>
<%= f.hidden_field :address,:value => @order.address %>
<%= f.hidden_field :postal_code,:value => @order.postal_code %>
<%= f.hidden_field :name,:value => @order.name %>
<%= f.hidden_field :total_payment ,:value => @total %><br><br>
      
<div class="text-center confirm">
  <%= f.submit "購入を確定する", class: "btn btn-success text-center btn-lg" %>
</div>
<% end %>
</div>