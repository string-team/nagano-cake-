<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <table class='table table-hover table-inverse table-striped table-bordered'>
        <br/>
        <div class="p-3 mb-2 bg-secondary text-white">
          <h3>注文履歴一覧</h3>
        </div>
        <thead>
          <tr>
            <th class="text-center">注文日</th>
            <th class="text-center">購入者</th>
            <th class="text-center">注文個数</th>
            <th class="text-center">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <%  @orders.each do |order| %>
            <tr>
              <td class='text-center'><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), order_path(order) %></td>
              <td class='text-center'><%= order.name %></td>
              <td class='text-center'>
                <% total_amount = 0 %>
                <% order.order_details.each do |order_detail| %>
                  <% total_amount += order_detail.amount %>
                <% end %>
                <%= total_amount %>
              </td>
              <td class='text-center'><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
