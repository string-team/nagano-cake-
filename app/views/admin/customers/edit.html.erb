<div class="row mt-5" style="width: 100%; margin-bottom:300px">
 <div style="width: 800px; margin:0 auto;">
  <h2 class="edit">
   会員情報編集
  </h2>
   <%= form_for @customer, url: admin_customer_path(@customer), method: 'PATCH', local: true do |f| %>
   <table id="customers-table" class="table mt-3">
     <tr>
      <td class="col-sm-3 mt-1" style="border:none;">
       会員ID
      </td>
      <td style="border:none;">
       <%= @customer.id %>
      </td>
     </tr>
      <tr>
      <td style="border:none;">
       <%= f.label "氏名", class: "col-form-label mt-1" %>
      </td>
      <td style="border:none;">
       <%= f.text_field :first_name, autofocus: true, placeholder: "山田", class: "col-sm-5 col-form-control mt-1"%>
       <%= f.text_field :last_name, autofocus: true, placeholder: "花子", class: "col-sm-5 col-form-control mt-1" %>
      </td>
      </tr>
      <tr>
      <td style="border:none;">
       <%= f.label "フリガナ", class: "col-form-label mt-1"%>
      </td>
      <td style="border:none;">
       <%= f.text_field :first_name_kana, autofocus: true, placeholder: "山田", class: "col-sm-5 col-form-control mt-1"%>
       <%= f.text_field :last_name_kana, autofocus: true, placeholder: "花子", class: "col-sm-5 col-form-control mt-1" %>
      </td>
      </tr>
      <tr>
      <td style="border:none;">
       <%= f.label "メールアドレス", class: "col-form-label mt-1" %>
      </td>
      <td style="border:none;">
       <%= f.text_field :email, autofocus: true, placeholder: "sample@sample.com", class: "col-sm-3 mt-1" %>
      </td>
      </tr>
      <tr>
      <td style="border:none;">
       <%= f.label "郵便番号(‐なし)", class: "col-form-label mt-1" %>
      </td>
      <td style="border:none;">
       <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "col-sm-3 mt-1" %>
      </td>
      </tr>
      <tr>
      <td style="border:none;">
       <%= f.label "住所", class: "col-form-label mt-1" %>
      </td>
      <td style="border:none;">
       <%= f.text_field :address, autofocus: true, placeholder: "東京都豊島区東池袋１丁目４３−５", class: "col-sm-8 mt-1" %>
      </td>
      </tr>
      <tr>
      <td style="border:none;">
       <%= f.label "電話番号", class: "col-form-label mt-1" %>
      </td>
      <td style="border:none;">
       <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", class: "col-sm-3 mt-1" %>
      </td>
      </tr>
      <tr>
      <td style="border:none;">
       <%= f.label "会員ステータス", class: "col-form-label mt-1" %>
      </td>
      <td style="border:none;">
       <%= f.radio_button :is_deleted, "active" %>
       <%= f.label :is_deleted, "有効", value:"有効" %>
       <%= f.radio_button :is_deleted, "retire" %>
       <%= f.label :is_deleted, "無効", value:"無効" %>
      </td>
      </tr>
   </table>
   <p><%= f.submit '編集内容を保存', class: "btn  col-sm-10 areare ari d-inline-block mt-3 mr-5" %></p>
   <% end %>
  </div>
 </div>
</div>