<div class = "container mt-5">
  <div class = "row">
    <div class = "col-lg-3 mt-5">
      <%= render 'sidebar', genres: @genres %>
    </div>
    <div class = "col-lg-8 co-lg-offset-1 mt-5">
      <table>
        <th><h2>商品一覧</h2></th>
        <th>(全<%= @items_active.total_count %>件)</th>
      </table>
      <% @items_active.each do |item| %>
        <div class = "item_container">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag(item, :image, size: "256x144", fallback: "no_image.jpg") %>
          <% end %>
          </br>
          <%= link_to item.name, item_path(item) %>
          </br>
          ¥<%= (item.price * 1.1).round.to_s(:delimited) %>
        </div>
      <% end %>
      <div class = "text-center">
        <%= paginate @items_active %>
      </div>
    </div>
  </div>
</div>