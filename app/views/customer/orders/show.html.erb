<h1>注文履歴詳細</h1>

<table border = "1" align = "right" >
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
        <%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </table>
    
    <h5>注文内容</h5>
    <table border = "1" align = "left" >
        <thead>
            <tr align = "center">
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.price*order_detail.amount).round %>
              <% @total += (order_detail.price*order_detail.amount) %>
          </td>
        </tr>
      <% end %>
    
    <h5>請求情報</h5>
    <table border = "1" align = "left" >
      <tr>
        <th>商品合計</th>
        <td><%= @total %></td>
      </tr>
      <tr>
        <th>送料</th>
        <td>800</td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= @total + 800 %></td>
      </tr>
    </table>