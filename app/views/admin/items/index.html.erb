<div class = "container">
  <div class = "row-lg-10">
  <h2><span>商品一覧</span></h2>
    <table class = "admin_item_table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th><%= link_to item.name, item_path(item) %></th>
            <th><%= item.price %></th>
            <th><%= item.genre_id.name%></th>
            <th><%= item.is_active %></th>
            <!-- if文で条件分岐して表記 -->
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class = "paginate">
      <%= paginate @items_page %>
    </div>
  </div>
</div>