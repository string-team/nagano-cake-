<h2>注文情報入力</h2>
<h4><strong>支払方法</strong></h4>
  <%= form_with model:@order,url:orders_confirm_path, local: true do |f| %>
      <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
      <%= f.label :payment_method, "クレジットカード" %>
      
      <%= f.radio_button  :payment_method, :"銀行振込" %>
      <%= f.label :payment_method, "銀行振込" %>
<h4><strong>お届け先</strong></h4>
　　　<%= f.radio_button :addreses_number, 1, checked: true%>
      <%= f.label :addreses_number_1, "ご自身の住所" %><br>
      〒<%= current_customer.postal_code %>
      <%= current_customer.addreses %><br>
      <%= current_customer.name %>
      
      <%= f.radio_button :addreses_number, 2 %>
      <%= f.label :addreses_number_2, "登録済み住所から選択" %>
      <%= f.collection_select(:registered, current_customer.addresses.all, :id, :addreses %>
      
      <%= f.radio_button :addreses_number, 3 %>
      <%= f.label :addreses_number_3, "新しいお届け先" %>
      <%= f.label :postal_code, "郵便番号" %>
      <%= f.text_field :postal_code %>
      <%= f.label :addreses, "住所" %>
      <%= f.text_field :addreses %>
      <%= f.label :addreses_name, "宛名" %>
      <%= f.text_field :addreses_name %>
      
      <%= f.submit "確認画面へ進む",class: "btn btn-large btn-primary" %>
  <% end %>