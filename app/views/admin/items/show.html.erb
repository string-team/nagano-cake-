<div class = "container mt-5">
  <div class = "row">
    <h3 class = "text-left"><span>商品詳細</span></h3>
  </div>
  <div class = "row">
    <div class = "col-lg-12">
      <div class = "row">
      <div class = "col-lg-4">
        <dic id = "image_field">
          <%= attachment_image_tag(@item, :image,size: "384x216", fallback: "no_image.jpg") %>
        </dic>
      </div>
      <div class = "col-lg-1"></div>
      <div class = "col-lg-7">
        <table class = "table">
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre.name %></th>
          </tr>
          <tr>
            <th>税込価格</br>
              (税抜価格)
            </th>
            <th><%= @item_tax_price.round.to_s(:delimated) %>  (<%= @item.price.round.to_s(:delimated) %>)円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
              <% else %>
              <p class="text-secondary">販売停止</p>
              <% end %>
            </th>
          </tr>
        </table>
          <div class = "text-center">
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success mx-auto" %>
          </div>
      </div>
      </div>
    </div>
  </div>
</div>