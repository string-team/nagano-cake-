<div class = "container">
  <div class = "row">
    <div class = "col-lg-12">
      <div class = "col-lg-3">
        <%= render "customer/item_sidebar", genres :@genres %>
      </div>
      <div class = "col-lg-9">
        <div class = "row">
          <div class = "col-lg-4">
            <h2>商品一覧</h2>
          </div>
        </div>
        <div class = "col-lg-5">
          <div class = "text-left">
            全<%= @items_actives.count %>件
          </div>
        </div>
        <% @items.each do |item|
          <div class = "item_container">
            <table class = "customer_item_table">
              <tr>
                <th>
                  <%= link_to item_path(item) do %>
                    <%= attachment_image_tag(item, :image, size: "180x130", fallback: "no_image.jpg") %>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th><%= link_to item.name, item_path(item) %></th>
              </tr>
              <tr>
                <th>¥<%= (item.price * 1.1) %></th>
              </tr>
            </table>
          </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>